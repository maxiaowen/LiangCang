<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:background="#f0f0f0"
        android:layout_height="1dp"/>


    <TextView
        android:id="@+id/tv_all"
        android:background="#ffffff"
        android:text="全部"
        android:textColor="@android:color/black"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <View
        android:layout_width="match_parent"
        android:background="#f0f0f0"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/tv_0_200"
        android:background="#ffffff"
        android:text="0-200"
        android:textColor="@android:color/black"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="45dp" />


    <View
        android:layout_width="match_parent"
        android:background="#f0f0f0"
        android:layout_height="1dp"/>


    <TextView
        android:id="@+id/tv_201_500"
        android:background="#ffffff"
        android:text="201-500"
        android:textColor="@android:color/black"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <View
        android:layout_width="match_parent"
        android:background="#f0f0f0"
        android:layout_height="1dp"/>


    <TextView
        android:id="@+id/tv_501_1000"
        android:background="#ffffff"
        android:text="501-1000"
        android:textColor="@android:color/black"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="45dp" />


    <View
        android:layout_width="match_parent"
        android:background="#f0f0f0"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/tv_1001_3000"
        android:background="#ffffff"
        android:text="1001-3000"
        android:textColor="@android:color/black"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <View
        android:layout_width="match_parent"
        android:background="#f0f0f0"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/tv_3000"
        android:background="#ffffff"
        android:text="3000以上"
        android:textColor="@android:color/black"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="45dp" />


    <Button
        android:id="@+id/btn_kong"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#56000000" />


</LinearLayout>